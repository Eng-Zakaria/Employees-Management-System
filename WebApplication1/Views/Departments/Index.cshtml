@model IEnumerable<Department>

<h1 style="background-color:cyan;
    color:maroon">
    Department Index
</h1>

<a  asp-controller="Departments" 
    asp-action="GetCreateView"
    class="btn btn-success" mt-4>
        Create New
</a>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-controller="Departments"
                            asp-action="GetDetailsView"
                   class="btn btn-success" asp-route-id="@item.Id"><i class="bi bi-info-circle-fill"></i></a>

                        <a asp-controller="Departments"
                           asp-action="GetEditView"
                   class="btn = btn-primary" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></a>
                        <a asp-controller="Departments"
                           asp-action="GetDeleteView"
                   class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-x-square-fill"></i></a>
                        </td>
                </tr>
            }

        </tbody>
    </table>
}

else{
    <h1 class=" alert alert-danger text-center 
        ">
            There is no data.
    </h1>
}

<a  asp-controller="Home" 
    asp-action="Index">
        back to home
</a>
